<div id="new-mortgage-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">添加抵押物</h4>
      </div>
      <div class="modal-body">
        <div class="form-horizontal">
          <div class="form-group">
            <label for="mortgage-type" class="col-sm-3 control-label">抵押类型</label>
            <div class="col-sm-9">
              <select name="mortgage-type" id="mortgage-type" class="form-control">
                <% MortgageType.find({}).done(function(err, vals) { %>
                <%   for (var i = 0; i < vals.length; ++i) { %>
                <option value="<%= vals[i].id %>"><%= vals[i].name %></option>
                <%   } %>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="mortgage-name" class="col-sm-3 control-label">抵押物名称</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="mortgage-name" name="mortgage-name" />
            </div>
          </div>
          <div class="form-group">
            <label for="mortgage-value" class="col-sm-3 control-label">抵押物净值</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="mortgage-value" name="mortgage-value" />
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary" id="mortgage-modal-save">保存</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
