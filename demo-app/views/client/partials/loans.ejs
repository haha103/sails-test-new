<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-2">当前贷款情况</div>
      <div class="col-md-2 col-md-offset-8">
        <button type="button" class="btn btn-primary btn-block btn-xs" data-toggle="modal" data-target="#new-loan-modal">添加贷款信息</button>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <%- partial('modals/loan') %>
    <table class="table table-condensed table-hover" id="loans">
      <thead>
        <tr>
          <th>出资机构</th>
          <th>贷款金额</th>
          <th>开始时间</th>
          <th>结束时间</th>
          <th>贷款方式</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>
