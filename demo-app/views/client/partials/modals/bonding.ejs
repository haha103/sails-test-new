<div id="new-bonding-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">添加担保信息</h4>
      </div>
      <div class="modal-body">
        <div class="form-horizontal">
          <div class="form-group">
            <label for="form" class="col-sm-2 control-label">类型</label>
            <div class="col-sm-10">
              <select name="warrantee_type" id="warrantee_type" class="form-control">
                <% ClientType.find({}).done(function(err, vals) { %>
                <%   for (var i = 0; i < vals.length; ++i) { %>
                <option value="<%= vals[i].id %>"><%= vals[i].name %></option>
                <%   } %>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="warrantee" class="col-sm-2 control-label">被担保人</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="warrantee" />
            </div>
          </div>
          <div class="form-group">
            <label for="loaner" class="col-sm-2 control-label">出资机构</label>
            <div class="col-sm-10">
              <select name="loaner" id="loaner" class="form-control">
                <% Loaner.find({}).done(function(err, vals) { %>
                <%   for (var i = 0; i < vals.length; ++i) { %>
                <option value="<%= vals[i].id %>"><%= vals[i].name %></option>
                <%   } %>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="amount" class="col-sm-2 control-label">担保金额</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="amount" />
            </div>
          </div>
          <div class="form-group">
            <label for="start" class="col-sm-2 control-label">开始时间</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="start" datepicker/>
            </div>
          </div>
          <div class="form-group">
            <label for="end" class="col-sm-2 control-label">结束时间</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="end" datepicker/>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary" id="bonding-modal-save">保存</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
