    <div class='form-group'>
      <label class='control-label' for="licence"><%= display_name["licence"] %></label>
      <input type='text' class='form-control input-sm' name='licence' placeholder="<%= licence %>" <%= disabled %> />
    </div>
  </div>
  <div class="col-md-6">
    <div class='form-group'>
      <label class='control-label' for="bank_card"><%= display_name["bank_card"] %></label>
      <input type='text' class='form-control input-sm' name='bank_card' placeholder="<%= bank_card %>" <%= disabled %> />
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class='form-group'>
      <label class='control-label' for="require_certs"><%= display_name["require_certs"] %></label>
      <input type='text' class='form-control input-sm' name='require_certs' placeholder="<%= require_certs %>" <%= disabled %> />
    </div>
  </div>
  <div class="col-md-6">
    <div class='form-group'>
      <label class='control-label' for="has_certs"><%= display_name["has_certs"] %></label>
      <input type='text' class='form-control input-sm' name='has_certs' placeholder="<%= has_certs %>" <%= disabled %> />
    </div>
  </div>
</div>
<div class='form-group'>
  <label class='control-label' for="registration_others"><%= display_name["registration_others"] %></label>
  <textarea class='form-control' name='registration_others' rows="3" <%= disabled %> ><%= registration_others %></textarea>
