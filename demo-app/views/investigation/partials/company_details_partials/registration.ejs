<hr class="haha-hr-compact"/>
<div class="row">
  <div class="col-md-3">
    <div class='form-group'>
      <label class='control-label' for="actual_owner"><%= display_name["actual_owner"] %></label>
      <input type='text' class='form-control input-sm' name='actual_owner' placeholder="<%= actual_owner %>" <%= disabled %> />
    </div>
  </div>
  <div class="col-md-3">
    <div class='form-group'>
      <label class='control-label' for="actual_owner_phone"><%= display_name["actual_owner_phone"] %></label>
      <input type='text' class='form-control input-sm' name='actual_owner_phone' placeholder="<%= actual_owner_phone %>" <%= disabled %> />
    </div>
  </div>
  <div class="col-md-6">
    <div class='form-group'>
      <label class='control-label' for="actual_owner_addr"><%= display_name["actual_owner_addr"] %></label>
      <input type='text' class='form-control input-sm' name='actual_owner_addr' placeholder="<%= actual_owner_addr %>" <%= disabled %> />
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <div class='form-group'>
      <label class='control-label' for="national_tax_id"><%= display_name["national_tax_id"] %></label>
      <input type='text' class='form-control input-sm' name='national_tax_id' placeholder="<%= national_tax_id %>" <%= disabled %> />
    </div>
  </div>
  <div class="col-md-3">
    <div class='form-group'>
      <label class='control-label' for="local_tax_id"><%= display_name["local_tax_id"] %></label>
      <input type='text' class='form-control input-sm' name='local_tax_id' placeholder="<%= local_tax_id %>" <%= disabled %> />
    </div>
  </div>
  <div class="col-md-6">
    <div class='form-group'>
      <label class='control-label' for="legal_person_addr"><%= display_name["legal_person_addr"] %></label>
      <input type='text' class='form-control input-sm' name='legal_person_addr' placeholder="<%= legal_person_addr %>" <%= disabled %> />
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <div class='form-group'>
      <label class='control-label' for="last_year_inspected"><%= display_name["last_year_inspected"] %></label>
