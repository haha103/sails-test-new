<% 
var currval = "";
var disabled = (curr_action == "show") ? "disabled" : "";
var actual_owner = "";
var actual_owner_phone = "";
var actual_owner_addr = "";
var national_tax_id = "";
var local_tax_id = "";
var legal_person_addr = "";
var last_year_inspected = true;
var licence = "";
var bank_card = "";
var require_certs = "";
var has_certs = "";
var registration_others = "";
if (curr_action == "show" && investigation_info) {
  actual_owner = investigation_info.actual_owner;
  actual_owner_phone = investigation_info.actual_owner_phone;
  actual_owner_addr = investigation_info.actual_owner_addr;
  national_tax_id = investigation_info.national_tax_id;
  local_tax_id = investigation_info.local_tax_id;
  legal_person_addr = investigation_info.legal_person_addr;
  last_year_inspected = investigation_info.last_year_inspected;
  licence = investigation_info.licence;
  bank_card = investigation_info.bank_card;
  require_certs = investigation_info.require_certs;
  has_certs = investigation_info.has_certs;
  registration_others = investigation_info.registration_others;
}
%>
