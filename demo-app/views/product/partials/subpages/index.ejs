<div class="panel-group" id="accordion">
  <% for (var i = 0; i < products.length; ++i) { %>
  <%   var p = products[i]; %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-target="#basic-info" href="#basic-info">
          [<%= p.guarantee_letter_code %>]<%= p.invest_purpose %>需求<%= p.needed_amount %>
        </a>
      </h4>
    </div>
    <div id="basic-info" class="panel-collapse collapse in">
      <div class="panel-body">
        <table class="table table-condensed haha-table-compact">
          <thead>
            <tr>
              <th>需求</th>
              <th>收益率</th>
              <th>期限</th>
              <th>投资开始</th>
              <th>投资截至</th>
              <th>状态</th>
              <th>进度</th>
              <th>还需</th>
              <th>担保机构</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= p.needed_amount %></td>
              <td><%= p.interest %></td>
              <td><%= p.duration_diff %>天</td>
              <td><%= p.duration_from %></td>
              <td><%= p.duration_to %></td>
              <td><%= p.status %></td>
              <td style="width:15%;">
                <div class="progress haha-progress-compact">
                  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= p.progress %>%;">
                    <span class="sr-only"><%= p.progress %>% Complete</span>
                  </div>
                </div>
              </td>
              <td><%= p.remain_amount %></td>
              <td style="width:15%;"><%= p.guarantee_company %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% } %>
</div>
