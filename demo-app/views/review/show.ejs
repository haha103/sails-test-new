<div class='haha-maincontent'>
  <form role='form' action="/<%= model %>/update" method="POST" class="haha-form-signup">
    <div class="row">
      <div class="col-md-6">
        <h3><%= title %></h3>
      </div>
      <div class="col-md-2 col-md-offset-4" id="edit-btn-container">
        <a class='btn btn-primary btn-sm btn-block' style="margin-top: 20px;" id='edit'>修改</a>
      </div>
    </div>
    <hr class="haha-hr-compact"/>
    <%- partial("partials/application_summary.ejs") %>
    <%- partial("partials/review_minutes.ejs") %>
    <hr id="toggle-hidden" hidden/>
    <div class="row" id="toggle-hidden" hidden>
      <div class="col-md-2">
        <button type='submit' class='btn btn-primary btn-block'>创建</button>
      </div>
    </div>
    <input class='hidden' name='_csrf' value='<%= _csrf %>' />
  </form>
</div>
