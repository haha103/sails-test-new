      %>
      <textarea class='form-control' name='fact_finance' rows="3" <%=  disabled %> ><%= currval %></textarea>
    </div>
    <div class='form-group'>
      <label class='control-label' for="fact_background"><%= display_name["fact_background"] %></label>
      <%
      currval = "";
      if (curr_action == "show" && riskassessment_info) { currval = riskassessment_info.fact_background; }
      %>
      <textarea class='form-control' name='fact_background' rows="3" <%=  disabled %> ><%= currval %></textarea>
    </div>
    <div class='form-group'>
      <label class='control-label' for="fact_misc"><%= display_name["fact_misc"] %></label>
      <%
      currval = "";
      if (curr_action == "show" && riskassessment_info) { currval = riskassessment_info.fact_misc; }
      %>
      <textarea class='form-control' name='fact_misc' rows="3" <%=  disabled %> ><%= currval %></textarea>
    </div>
  </div>
</div>
