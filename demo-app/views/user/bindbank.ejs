<div class='container'>
  <br/>
  <div class="progress">
    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
      <span>1. 帐号注册</span>
    </div>
    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
      <span>2. 用户激活</span>
    </div>
    <div class="progress-bar" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
      <span>3. 绑定银行信息</span>
    </div>
    <div class="progress-bar progress-bar-gray" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
      <span>4. 注册成功</span>
    </div>
  </div>
  <h3>绑定银行账户</h3>
  <hr/>
  <form role='form' action="/user/update/<%= user_info.id %>" method="POST" class="form-horizontal">
    <% if (flash && flash.err) { %>
    <div class="alert alert-danger">					
      <% Object.keys(flash.err).forEach(function(error) { %>
      <%= error %>: <%= JSON.stringify(flash.err[error]) %>
      <% }) %>
    </div>
    <% } %>
    <div class='form-group'>
      <label class='control-label col-md-2' for="bank_province"><%= display_name["bank_province"] %></label>
      <div class="col-md-4">
        <select name="bank_province" id="bank_province" class="form-control province">
          <option value="">&nbsp;</option>
          <% for (var p in cities) { %>
          <option value="<%= p %>"><%= p %></option>
          <% } %>
        </select>
      </div>
    </div>
    <div class='form-group'>
      <label class='control-label col-md-2' for="bank_city"><%= display_name["bank_city"] %></label>
      <div class="col-md-4">
        <select name="bank_city" id="bank_city" class="form-control city">
        </select>
      </div>
    </div>
    <div class='form-group'>
      <label class='control-label col-md-2' for='bank_name'><%= display_name['bank_name'] %></label>
      <div class="col-md-4">
        <input type='text' class='form-control' name='bank_name' data-toggle="tooltip" data-placement="right" title="开户行全称"></input>
      </div>
    </div>
    <div class='form-group'>
      <label class='control-label col-md-2' for="bank_account"><%= display_name["bank_account"] %></label>
      <div class="col-md-4">
        <input type='text' class='form-control' id='bank_account' name='bank_account' data-toggle="tooltip" data-placement="right" title="账户户主必须为您注册时填写的真实姓名：<%= user_info.name %>"></input>
      </div>
    </div>
    <br/>
    <div class='row'>
      <div class="col-md-2 col-md-offset-2">
        <button type="submit" class="btn btn-primary btn-block haha-btn-toggle" onclick="handle_submit_btn(this)">绑定</button>
      </div>
    </div>
    <input class='hidden' name='_csrf' value='<%= _csrf %>' />
    <input class='hidden' name='bank_binded' value='true' />
  </form>
</div>
