<div class="modal fade" id="newmessage-modal" tabindex="-1" role="dialog" aria-labelledby="newmessage-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form role='form' action="/helpmessage/create" method="POST" class="form-horizontal" id="haha-form-newmessage">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          新留言
        </div>
        <div class="modal-body">
          <div class='form-group'>
            <label class='control-label col-md-2' for="newmessage_type">留言类型</label>
            <div class="col-md-10">
							<select name="newmessage_type" id="newmessage_type" class="form-control">
								<option value="">请选择类型</option>
								<% _.each(help_message_types, function(t) { %>
                  <option value="<%= t.name_en %>"><%= t.name %></option>
								<% }) %>
              </select>
            </div>
          </div>
          <div class='form-group'>
            <label class='control-label col-md-2' for="newmessage_title">留言标题</label>
            <div class="col-md-10">
							<input type='text' class='form-control' name='newmessage_title'></input>
            </div>
          </div>
					<div class='form-group'>
            <label class='control-label col-md-2' for="newmessage_desc">留言标题</label>
            <div class="col-md-10">
							<textarea rows="5" class='form-control' name='newmessage_desc'></textarea>
            </div>
          </div>
          <input class='hidden' name='_csrf' value='<%= _csrf %>' />
        </div>
        <div class="modal-footer haha-modal-footer-compact">
          <div class='row'>
            <div class="col-md-2 col-md-offset-10">
              <button type="submit" class="btn btn-primary btn-block btn-sm">确定</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
