<% var new_paypass = (session.User && !session.User.encryptedPaypass); %>
<div class="modal fade" id="paypass-update-modal" tabindex="-1" role="dialog" aria-labelledby="paypass-update-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form role='form' action="/user/update" method="POST" class="form-horizontal" id="haha-form-paypass-update">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <%= new_paypass ? "新建" : "修改" %>支付密码
        </div>
        <div class="modal-body">
					<% if (!new_paypass) { %>
						<div class='form-group'>
							<label class='control-label col-md-3' for="old_paypass">旧支付密码</label>
							<div class="col-md-9">
								<input type='password' class='form-control' id='old_paypass' name='old_paypass'></input>
							</div>
						</div>
					<% } %>
          <div class='form-group'>
            <label class='control-label col-md-3' for="paypass">新支付密码</label>
            <div class="col-md-9">
              <input type='password' class='form-control' id='paypass' name='paypass'></input>
            </div>
          </div>
					<div class='form-group'>
            <label class='control-label col-md-3' for="paypass_confirm">新密码确认</label>
            <div class="col-md-9">
              <input type='password' class='form-control' id='paypass_confirm' name='paypass_confirm'></input>
            </div>
          </div>
          <input class='hidden' name='_csrf' value='<%= _csrf %>' />
        </div>
        <div class="modal-footer haha-modal-footer-compact">
          <div class='row'>
            <div class="col-md-2 col-md-offset-10">
              <button type="submit" class="btn btn-primary btn-block btn-sm">确定</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div
