<form role='form' action="/user/update/<%= user.id %>" method="POST" class="form-horizontal" id="haha-form-signup">
  <div class="panel-group" id="accordion">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-target="#basic-info" href="#basic-info">
            基本信息
          </a>
        </h4>
      </div>
      <div id="basic-info" class="panel-collapse collapse in">
        <div class="panel-body">
          <div class='form-group'>
            <label class='control-label col-md-2'><%= display_name["user_name"] %></label>
            <div class="col-md-4">
              <p class="haha-form-label-field"><%= user.user_name %></p>
            </div>
          </div>
          <div class='form-group'>
            <label class='control-label col-md-2' for="name"><%= display_name["name"] %></label>
            <div class="col-md-4">
              <input type='text' class='form-control' name='name' placeholder="<%= user.name %>" value="<%= user.name %>"></input>
            </div>
          </div>
          <div class='form-group'>
            <label class='control-label col-md-2' for="id_card"><%= display_name["id_card"] %></label>
            <div class="col-md-4">
              <input type='text' class='form-control' name='id_card' placeholder="<%= user.id_card %>" value="<%= user.id_card %>"></input>
            </div>
          </div>
          <div class='form-group'>
            <label class='control-label col-md-2' for="email"><%= display_name["email"] %></label>
            <div class="col-md-4">
              <input type='text' class='form-control' name='email' placeholder="<%= user.email %>" value="<%= user.email %>"></input>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br/>
</form>
