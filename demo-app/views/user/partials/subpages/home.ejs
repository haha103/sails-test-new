<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">账户余额</h4>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <h1 class='haha-no-vmargin'><small>&yen;</small> <%= session.User.balance %> <small>元</small></h1>
      </div>
      <div class="col-md-1 col-md-offset-3 haha-compact-col haha-add-tmargin-xs">
        <button class="btn btn-default btn-block" data-toggle="modal" data-target="#recharge-modal">充值</button>
        <div class="modal fade" id="recharge-modal" tabindex="-1" role="dialog" aria-labelledby="recharge-modal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <form role='form' action="/transaction/create?type=recharge" method="POST" class="form-horizontal" id="haha-form-recharge">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  充值
                </div>
                <div class="modal-body">
                  <div class='form-group'>
                    <label class='control-label col-md-2' for="recharge_amount">充值金额</label>
                    <div class="col-md-10">
                      <div class="input-group">
                        <span class="input-group-addon">&yen;</span>
                        <input type='text' class='form-control' id='recharge_amount' name='recharge_amount'></input>
                        <span class="input-group-addon">元</span>
                      </div>
                    </div>
                  </div>
                  <div class='form-group'>
                    <label class='control-label col-md-2' for="recharge_amount_confirm">确认金额</label>
                    <div class="col-md-10">
                      <div class="input-group">
                        <span class="input-group-addon">&yen;</span>
                        <input type='text' class='form-control' name='recharge_amount_confirm'></input>
                        <span class="input-group-addon">元</span>
                      </div>
                    </div>
                  </div>
                  <input class='hidden' name='_csrf' value='<%= _csrf %>' />
                </div>
                <div class="modal-footer haha-modal-footer-compact">
                  <div class='row'>
                    <div class="col-md-2 col-md-offset-10">
                      <button type="submit" class="btn btn-primary btn-block btn-sm">确定</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-1 haha-compact-col haha-add-tmargin-xs">
        <button class="btn btn-default btn-block" data-toggle="modal" data-target="#withdraw-modal">提现</button>
        <div class="modal fade" id="withdraw-modal" tabindex="-1" role="dialog" aria-labelledby="withdraw-modal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <form role='form' action="/transaction/create?type=withdraw" method="POST" class="form-horizontal" id="haha-form-withdraw">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  提现
                </div>
                <div class="modal-body">
                  <div class='form-group'>
                    <label class='control-label col-md-2' for="withdraw_amount">提现金额</label>
                    <div class="col-md-10">
                      <div class="input-group">
                        <span class="input-group-addon">&yen;</span>
                        <input type='text' class='form-control' id='withdraw_amount' name='withdraw_amount'></input>
                        <span class="input-group-addon">元</span>
                      </div>
                    </div>
                  </div>
                  <div class='form-group'>
                    <label class='control-label col-md-2' for="withdraw_amount_confirm">确认金额</label>
                    <div class="col-md-10">
                      <div class="input-group">
                        <span class="input-group-addon">&yen;</span>
                        <input type='text' class='form-control' name='withdraw_amount_confirm'></input>
                        <span class="input-group-addon">元</span>
                      </div>
                    </div>
                  </div>
                  <input class='hidden' name='_csrf' value='<%= _csrf %>' />
                </div>
                <div class="modal-footer haha-modal-footer-compact">
                  <div class='row'>
                    <div class="col-md-2 col-md-offset-10">
                      <button type="submit" class="btn btn-primary btn-block btn-sm">确定</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-1 haha-compact-col haha-add-tmargin-xs">
        <button class="btn btn-default btn-block">转账</button>
      </div>
    </div>
  </div>
</div>
